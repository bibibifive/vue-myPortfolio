{
  "compilerOptions": {
    "allowJs": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "checkJs": false, // 启用javascript文件的类型检查
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["esnext", "dom"],
    "types": ["vite/client"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["**/*.js", "src/**/*.js","src/**/**/*.js", "src/**/*.vue", "src/config/style.ts"],
  "exclude": ["node_modules", "**/node_modules/*","dist"]
}
